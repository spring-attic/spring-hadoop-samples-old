    <repositories>
        <repository>
            <id>spring-milestone</id>
            <url>https://repo.springsource.org/libs-milestone</url>
        </repository>
        <repository>
            <!-- Snapshots -->
            <id>spring-libs-snapshot</id>
            <name>Spring Maven SNAPSHOT Repository</name>
            <url>https://repo.springsource.org/libs-snapshot</url>
        </repository>
    </repositories>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>appassembler-maven-plugin</artifactId>
                <version>1.3</version>
                <configuration>
                    <assembleDirectory>${project.build.directory}/${app.path}</assembleDirectory>
                    <repositoryLayout>flat</repositoryLayout>
                    <repositoryName>lib</repositoryName>
                    <configurationDirectory>config</configurationDirectory>
                    <copyConfigurationDirectory>false</copyConfigurationDirectory>
                    <includeConfigurationDirectoryInClasspath>true</includeConfigurationDirectoryInClasspath>
                    <extraJvmArguments>-javaagent:$REPO/jolokia-jvm-${jolokia.version}-agent.jar=port=8778,host=localhost</extraJvmArguments>
                    <programs>
                        <program>
                            <mainClass>org.springframework.data.hadoop.server.SpringDataServer</mainClass>
                            <name>server</name>
                        </program>
                        <program>
                            <mainClass>org.springframework.samples.hadoop.runtime.Launcher</mainClass>
                            <name>wordcount</name>
                            <commandLineArguments>
                                <commandLineArgument>wordcount</commandLineArgument>
                            </commandLineArguments>
                        </program>
                        <program>
                            <mainClass>org.springframework.samples.hadoop.runtime.HiveApp</mainClass>
                            <name>hive-app</name>
                        </program>
                        <program>
                            <mainClass>org.springframework.samples.hadoop.runtime.HiveJdbcApp</mainClass>
                            <name>hive-jdbc-app</name>
                        </program>
                        <program>
                            <mainClass>org.springframework.samples.hadoop.runtime.HiveAppWithApacheLogs</mainClass>
                            <name>hive-apache-log-app</name>
                        </program>
                        <program>
                            <mainClass>org.springframework.samples.hadoop.runtime.PigApp</mainClass>
                            <name>pig-app</name>
                        </program>
                        <program>
                            <mainClass>org.springframework.samples.hadoop.runtime.PigAppWithApacheLogs</mainClass>
                            <name>pig-apache-log-app</name>
                        </program>
                    </programs>
                </configuration>
                <executions>
                    <execution>
                        <id>package</id>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>config</id>
                        <phase>package</phase>
                        <configuration>
                            <tasks>
                                <copy todir="target/${app.path}/config">
                                    <fileset dir="src/main/config"/>
                                </copy>
                                <copy todir="target/${app.path}/webapp">
                                    <fileset dir="src/main/resources/META-INF/webapp"/>
                                </copy>
                                <copy todir="target/${app.path}/data">
                                    <fileset dir="src/main/data"/>
                                </copy>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
